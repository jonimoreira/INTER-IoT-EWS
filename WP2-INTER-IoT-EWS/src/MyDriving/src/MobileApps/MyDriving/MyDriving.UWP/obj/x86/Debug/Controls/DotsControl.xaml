<UserControl
    x:Class="MyDriving.UWP.Controls.DotsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Ellipse x:ConnectionId='1' x:Name="Circle1" Style="{StaticResource DotStyle}"/>
            <Ellipse x:ConnectionId='2' x:Name="Circle2" Style="{StaticResource DotStyle}"/>
            <Ellipse x:ConnectionId='3' x:Name="Circle3" Style="{StaticResource DotStyle}"/>
            <Ellipse x:ConnectionId='4' x:Name="Circle4" Style="{StaticResource DotStyle}"/>
            <Ellipse x:ConnectionId='5' x:Name="Circle5" Style="{StaticResource DotStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>

