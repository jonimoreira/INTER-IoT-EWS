<UserControl x:ConnectionId='1'
    x:Class="MyDriving.UWP.Controls.CirclePercentage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">
    <Grid>
        <Path x:ConnectionId='2' x:Name="Path" Stroke="{StaticResource BrandColor}"                                            >
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure x:ConnectionId='4'                                  >
                            <PathFigure.Segments>
                                <ArcSegment x:ConnectionId='5' x:Name="Arc"                                                       SweepDirection="Clockwise"                           />
                            </PathFigure.Segments>
                        </PathFigure >
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
   <!--  The purpose of rectangle is for the control to center correctly when the arc is smaller than 180 degrees -->
        <Rectangle x:ConnectionId='3'                                                        Stroke="Transparent"/>
    </Grid>
</UserControl>

